@model VollyV3.Data.Application

@{
    ViewData["Title"] = "Delete Application";
    Layout = "_Layout";
}

<div class="container bg-default-dark padded">
    <div class="page-title">
        Are you sure you want to delete this application?
    </div>
    <div class="page-separator"></div>
    <div class="page-content">
        <div class="page-text">
            <section>
                <h3>@Model.Opportunity.Name</h3>
                <h4>with @Model.Opportunity.Organization.Name</h4>
                <p>
                    At @Model.Occurrence?.StartTime
                </p>
                <p>
                    Applicant: @Model.Name
                </p>
                <p>
                    Email: @Model.Email
                </p>
                <p></p>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-outline-danger" />
                    <a asp-action="Index">Back to List</a>
                </form>
            </section>
        </div>
    </div>
</div>