@model VollyV3.Models.ViewModels.PlatformAdministrator.Opportunities.OpportunityDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<div class="padded bg-default-dark">
    <h2>@Model.Name</h2>
    <h3>@Model.ContactEmail</h3>
    <div class="row">
        <div class="col-md-6">
            <div>
                Type: @Model.OpportunityType
            </div>

            <div>
                Location: @Model.Address
            </div>

            <div>
                Category: @Model.Category
            </div>
            <p>
                @Model.Description
            </p>
        </div>
        <div class="col-md-6">
            <img class="img-fluid" src="@Model.ImageUrl" />
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>