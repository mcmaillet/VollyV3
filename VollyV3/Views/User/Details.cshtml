@model VollyV3.Models.ViewModels.PlatformAdministrator.Users.UserDetailsViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container bg-default-dark padded">
    <div class="text-right">
        <a asp-action="Index">Back to list</a>
    </div>
    <div class="page-title">
        <h2>@Model.User.Email</h2>
    </div>
    <div class="page-separator"></div>
    <div class="page-content">
        <div class="page-text">
            <h3>
                Roles
            </h3>
            <ul>
                @foreach (var role in Model.Roles)
                {
                    <text>
                        <li>@role</li>
                    </text>
                }
            </ul>
            <h3>
                Created
            </h3>
            <p>
                @Model.User.CreatedDateTime
            </p>
        </div>
        @if (Model.User.LockoutEnd != null)
        {
            <text>
                <div class="text-right">
                    <a asp-route-id="@Model.User.Id"
                       asp-action="Unlock">Unlock</a>
                </div>
            </text>
        }
        <div class="text-right">
            <a asp-route-id="@Model.User.Id" asp-action="PasswordReset">Reset password</a>
        </div>
        <div class="text-right">
            <a asp-route-id="@Model.User.Id" asp-action="Delete">Delete</a>
        </div>
    </div>
</div>