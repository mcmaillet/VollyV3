@model VollyV3.Models.ViewModels.PlatformAdministrator.Newsletters.SendViewModel
@{
    ViewData["Title"] = "Newletters";
}

<div class="padded bg-default-dark">
    <div class="text-danger">
        @TempData["Messages"]
    </div>

    Are you sure you want to send a newsletter to all subscribers?

    <form asp-action="Send" method="post">
        <input type="submit" value="Send" />
    </form>


</div>
<script>
    $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchableList tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });
    });
</script>