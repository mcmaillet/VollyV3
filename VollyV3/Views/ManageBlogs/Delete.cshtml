@model VollyV3.Data.Blog
@{
    ViewData["Title"] = "Delete blog";
}

<div class="padded bg-default-dark">
    <div class="text-danger">
        @TempData["Messages"]
    </div>
    <section>
        <h2>Are you sure you want to delete the following blog?</h2>
        <section class="form-group">
            <label asp-for="Name">Name: </label>
            <span class="form-control">@Model.Name</span>
        </section>
        <section class="form-group">
            <label asp-for="Url">URL: </label>
            <span class="form-control">@Model.Url</span>
        </section>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-outline-danger" />
        </form>
    </section>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}